@GLOSSDEF{Nmerodeseriedeltransmisor,
word = {Número de serie del transmisor},
definition = {Cada transmisor tiene un número de serie único de 28 ó 32 bits.}
}


@GLOSSDEF{Clavesecreta,
word = {Clave secreta},
definition = {Clave de 64 bits generada por una función partiendo de: a)número de serie de 28 ó 32 bits o bien por una semilla de 32 ó 48 bits ó b)clave del fabricante, de 64 bits.Jamás se transmite y no es posible leerla.}
}


@GLOSSDEF{Semilla,
word = {Semilla},
definition = {Valor de 32 ó 48 bits programado en el codificador. Se transmite al pulsar una combinación concreta de botones. Se puede deshabilitar después del aprendizaje del decodificador.}
}


@GLOSSDEF{Generadordelaclave,
word = {Generador de la clave},
definition = {Función matemática usada para generar una clave única para cada transmisor partiendo del número de serie o de la semilla.}
}

@GLOSSDEF{Clavedelfabricante,
word = {Clave del fabricante},
definition = {Es necesaria en el receptor si se ha usado en la función de generación de la clave. Puede ser programada en el receptor en el proceso de fabricación.}
}

@GLOSSDEF{Aprendizajenormalderivadodelnmerodeserie,
word = {Aprendizaje normal (derivado del número de serie)},
definition = {El receptor usa la misma información usada en una transmisión normal para generar la clave secreta y descifrar el valor del número de secuencia del transmisor.}
}

@GLOSSDEF{Aprendizajeseguroderivadodelasemilla),
word = {Aprendizaje seguro (derivado de la semilla)},
definition = {El transmisor se activa con una combinación especial de botones para emitir un valor de 32 ó 48 bits (semilla) que se usa para generar la clave o ser parte de la clave. La transmisión de la semilla puede ser deshabilitada después del aprendizaje.}
}

@GLOSSDEF{Contadordesincronizacin,
word = {Contador de sincronización},
definition = {Contador de 16 bits que se incrementa en cada activación del codificador}
}







@GLOSSDEF{PCB,
word = {PCB},
definition = {PCB o circuito impreso (Printed Circuit Board), es un medio para sostener mecánicamente y conectar eléctricamente componentes electrónicos, a través de rutas o pistas de material conductor, grabados en hojas de cobre laminadas sobre un sustrato no conductor, comúnmente baquelita o fibra de vidrio}
}



@GLOSSDEF{switch,
word = {Switch},
definition = {Un conmutador o switch es un dispositivo digital de lógica de interconexión de redes de computadores que opera en la capa de enlace de datos del modelo OSI. Su función es interconectar dos o más segmentos de red, de manera similar a los puentes de red, pasando datos de un segmento a otro de acuerdo con la dirección MAC de destino de las tramas en la red}
}










@GLOSSDEF{Grid,
word = {Grid},
definition = {Una cuadrícula tipográfica es una estructura de dos dimensiones formada por la intersección de los ejes vertical y horizontal usada para estructurar el contenido. La red sirve como una armadura en la que un diseñador puede organizar el texto y las imágenes de manera fácil y racional}
}

@GLOSSDEF{Footprint,
word = {Footprint},
definition = {La huella o footprint es un mapa de las patas de un dispositivo usualmente con la distribución de los pad y perforaciones recomendadas}
}





@GLOSSDEF{SMT,
word = {SMT},
definition = {Tecnología basada en el montaje de los componentes sobre la superficie misma del circuito impreso}
}

@GLOSSDEF{SMD,
word = {SMD},
definition = {Componentes de montaje superficial fabricados con la tecnología SMT}
}

@GLOSSDEF{ThroughHole,
word = {Through Hole},
definition = {Tecnología donde los componentes atraviesan la placa de circuito impreso}
}




@GLOSSDEF{RF,
word = {RF},
definition = {El término radiofrecuencia, también denominado espectro de radiofrecuencia o RF, se aplica a la porción menos energética del espectro electromagnético, situada entre unos 3 Hz y unos 300 GHz. El Hertz es la unidad de medida de la frecuencia de las ondas, y corresponde a un ciclo por segundo. Las ondas electromagnéticas de esta región del espectro, se pueden transmitir aplicando la corriente alterna originada en un generador a una antena.}
}




@GLOSSDEF{NOR,
word = {NOR},
definition = {La puerta lógica NO-O, más conocida por su nombre en inglés NOR, realiza la operación de suma lógica negada.}
}



@GLOSSDEF{NAND,
word = {NAND},
definition = {La puerta lógica NO-Y, más conocida por su nombre en inglés NAND, realiza la operación de producto lógico negado.}
}



@GLOSSDEF{MMI,
word = {MMI},
definition = {Man-Machine Interface, Interfaz Hombre-Máquina}
}



@GLOSSDEF{EDA,
word = {EDA},
definition = {Diseño electrónico automatizado}
}



@GLOSSDEF{RSSI,
word = {RSSI},
definition = {Received Signal Strength Indicator. Indicador de potencia de la señal recibida}
}




@GLOSSDEF{clema,
word = {Clema},
definition = {Es un tipo de conector eléctrico en el que el cable se aprisiona contra una pieza metálica mediante el uso de un tornillo}
}

