\newcommand{\figura}[4][\columnwidth]
{
    \begin{figure}[H] %!hbp] %H]  %H
	 % Es necesario usar \usepackage{float} para que con H se pongan correctamente en su sitio
   %con H se inserta donde esté el comando de Includegraphics
	 % h Place the figure in the text where the figure command is located. This option cannot be executed if there is not enough room remaining on the page.
   %t Place the figure at the top of the page.
   %b Place the figure at the bottom of a page.
   %p Place the figure on a page containing only floats.
    \centering
    %\vspace{-0.3cm}
    \includegraphics[width=#1]{#2}
    \caption{\label{#4}#3}
    %\vspace{-1cm}
    \end{figure}
}

\newcommand{\figuraht}[4][\columnwidth]
{
    \begin{figure}[ht]  %H
	 % Es necesario usar \usepackage{float} para que con H se pongan correctamente en su sitio
   %con H se inserta donde esté el comando de Includegraphics
	 % h Place the figure in the text where the figure command is located. This option cannot be executed if there is not enough room remaining on the page.
   %t Place the figure at the top of the page.
   %b Place the figure at the bottom of a page.
   %p Place the figure on a page containing only floats.
    \centering
    %\vspace{-0.5cm}
    \includegraphics[width=#1]{#2}
    \caption{\label{#4}#3}
    \vspace{0.5cm}
    \end{figure}
}

